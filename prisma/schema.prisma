datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

generator client {
    provider = "prisma-client-js"
}

model Post {
    id            Int      @id @default(autoincrement())
    isbn          String   @db.VarChar(13)
    title         String   @db.VarChar(255)
    postPublished Boolean  @default(false)
    publishedYear Int?
    publisher     String?
    authors       String?
    postAuthor    User     @relation(fields: [postAuthorId], references: [id])
    postAuthorId  Int      @map("authorId")
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt
}

model User {
    id       Int     @id @default(autoincrement())
    email    String  @unique
    password String // password bcrypt hash
    name     String?
    posts    Post[]
}
